{
  "name": "shared-utils",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/shared/utils/src",
  "prefix": "ngx-validate",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/packages/shared/utils"],
      "options": {
        "project": "packages/shared/utils/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/shared/utils/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/shared/utils/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/shared/utils"],
      "options": {
        "jestConfig": "packages/shared/utils/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["packages/shared/utils/**/*.ts", "packages/shared/utils/**/*.html"]
      }
    }
  },
  "tags": ["type:util", "scope:internal"]
}
